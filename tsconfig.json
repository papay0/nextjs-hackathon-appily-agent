{
    "compilerOptions": {
      "target": "ES2020",
      "module": "CommonJS",
      "moduleResolution": "node",
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "skipLibCheck": true,
      "outDir": "dist",
      "sourceMap": true,
      "resolveJsonModule": true
    },
    "include": ["*.ts", "**/*.ts"],
    "exclude": ["node_modules", "dist", "temp", "data/files"]
  }