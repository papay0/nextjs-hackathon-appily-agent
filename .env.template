# AI API Keys
ANTHROPIC_API_KEY=your_anthropic_api_key_here
OPENAI_API_KEY=your_openai_api_key_here
GOOGLE_GENERATIVE_AI_API_KEY=your_gemini_api_key_here

# Selected AI Model
# Options: claude-3-7-sonnet, claude-3-5-sonnet, gpt-4o, gpt-4o-mini, gemini-1-5-pro
AI_MODEL=claude-3-7-sonnet

# Server configuration
PORT=3000

# Cloud storage (optional, for deployment)
CLOUDFLARE_ACCOUNT_ID=
R2_ACCESS_KEY_ID=
R2_SECRET_ACCESS_KEY=
R2_BUCKET=appily-dev
R2_PUBLIC_ID=

# Firebase Configuration
FIREBASE_PROJECT_ID=appily-dev
FIREBASE_STORAGE_BUCKET=appily-dev.firebasestorage.app

# Firebase Storage Enabling (set to true to activate Firebase storage)
FIREBASE_STORAGE_ENABLED=false

# Firebase Admin SDK Service Account (only needed for local development)
# In Cloud Run, Application Default Credentials are used automatically
FIREBASE_SERVICE_ACCOUNT_KEY_PATH=./firebase-service-account-key.json